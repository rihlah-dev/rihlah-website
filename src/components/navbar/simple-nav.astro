<style>
/* Base nav link styling */
.nav-link {
  color: #1D333E;
  font-size: 18px;
  font-style: normal;
  font-weight: 500;
  line-height: 33px;
  transition: border-color 0.2s ease;
}

/* Hover effect for nav links */
.nav-link:hover {
  border-bottom-color: rgba(29, 51, 62, 0.3);
}

/* Active page indicator */
.nav-link.active {
  border-bottom-color: rgba(29, 51, 62, 0.5);
}

/* Donate button styling */
.donate-button {
  border-radius: 6px;
  opacity: 1;
  background: #31576A;
  box-shadow: 0 3px 5px 0 rgba(0, 0, 0, 0.25);
  font-size: 16px;
}

.donate-button:hover {
  background: #3d6b80;
}
</style>

<script>
const menuButton = document.querySelector('button[aria-controls="mobile-menu"]');
const mobileMenu = document.getElementById('mobile-menu');
const [openIcon, closeIcon] = menuButton.querySelectorAll('svg');

menuButton.addEventListener('click', () => {
  const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
  menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
  mobileMenu.classList.toggle('hidden');
  openIcon.classList.toggle('hidden');
  closeIcon.classList.toggle('hidden');
});

// Active page detection
const currentPath = window.location.pathname;
const navLinks = document.querySelectorAll('.nav-link');

navLinks.forEach(link => {
  const linkPath = new URL(link.href).pathname;
  // Check if current path matches or starts with the link path
  if (currentPath === linkPath || (linkPath !== '/' && currentPath.startsWith(linkPath))) {
    link.classList.add('active');
  }
});
</script>