---
// CTACards.astro
---

<section class="py-20 mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
        <!-- Hiring Card -->
        <div class="bg-[var(--color-primary-dark)] rounded-2xl p-10 text-white">
            <p class="text-slate-300 text-sm mb-2 py-1">Join our team</p>
            <h3 class="text-2xl sm:text-3xl font-bold mb-10">We're hiring!</h3>
            <button class="bg-[var(--color-accent-yellow)] hover:bg-[var(--color-accent-gold)] text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200">
                Contact Us
            </button>
        </div>
        
        <!-- Feedback Card -->
        <div class="bg-[var(--color-primary-dark)] rounded-2xl p-10 text-white">
            <p class="text-slate-300 text-sm mb-2 py-1">Give your feedback</p>
            <h3 class="text-2xl sm:text-3xl font-bold mb-10">We would love to hear from you</h3>
            <button class="bg-[var(--color-accent-yellow)] hover:bg-[var(--color-accent-gold)] text-white my-1 px-6 py-3 rounded-lg font-semibold transition-colors duration-200">
                Contact Us
            </button>
        </div>
    </div>
</section>